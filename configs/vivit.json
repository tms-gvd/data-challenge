{
    "name": "vivit",
    "device": "cuda",

    "arch": {
        "type": "ViViT",
        "args": {
            "image_size": 224,
            "patch_size": 16,
            "num_classes": 37,
            "num_frames": 37
        }
    },
    "dataset": {
        "type": "SeqFromH5",
        "args": {
            "path_to_config": "data/sequences/train/seq_labels.txt"
        }
    },
    "dataloader": {
        "type": "DataloaderFromDataset",
        "args":{
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },
    "loss": "bce+iou",
    "metrics": [
        "IoU"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "monitor": "max val_iou",
        "early_stop": 10,
        "save_period": 1
    }
}
