{
    "name": "debug_mnist",
    "device": "cuda",

    "arch": {
        "type": "MnistModel",
        "args": {
            "nb_classes": 10
        }
    },
    "dataloader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "Accuracy",
        "PrecisionPerClass"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "monitor": "min val_loss",
        "early_stop": 10,
        "save_period": 1
    }
}
