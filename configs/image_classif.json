{
    "name": "image_classif",
    "device": "cuda",

    "arch": {
        "type": "CustomResNet18",
        "args": {
            "nb_classes": 3
        }
    },
    "dataset": {
        "type": "ImagesFromTXT",
        "args": {
            "path_to_config": "data/images/train/images_labels.txt"
        }
    },
    "dataloader": {
        "type": "DataloaderFromDataset",
        "args":{
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 6
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "Accuracy",
        "PrecisionPerClass"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "monitor": "min val_loss",
        "early_stop": 10,
        "save_period": 1
    }
}
